[MESSAGES CONTROL]
disable=missing-docstring, bad-continuation, indent-after-paren, indent-string, max-line-lengh,
	    max-module-lines, too-few-public-methods, too-many-ancestors 

[MASTER]
load-plugins=pylint_django

ignore=wsgi.py,manage.py,migrations,settings.py

[SIMILARITIES]

ignore-comments=no

ignore-docstrings=no

ignore-imports=yes # Problem with tuple imports - https://github.com/PyCQA/pylint/issues/1422

min-similarity-lines=4

[DESIGN]

max-returns=2
